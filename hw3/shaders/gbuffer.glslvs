#version 330 core

in vec3 in_pos;
in vec3 in_norm;

out vec3 vs_norm;
out vec3 vs_pos;

uniform mat4 model;
uniform mat4 view;
uniform mat4 proj;

void main()
{
    gl_Position = proj * view * model * vec4(in_pos, 1);
    vs_pos = vec3(model * vec4(in_pos, 1));
    vs_norm = vec3(model * vec4(in_norm, 1));
}
